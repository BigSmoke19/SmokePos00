{
  "name": "my-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./src/main/main.js",
  "build": {
    "appId": "com.example.myapp",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "extraResources": [
      {
        "from": "resources/mariadb",
        "to": "mariadb"
      }
    ]
  },
  "scripts": {
    "dev": "concurrently \"npm run db-wait-start\" \"vite\" \"npm run electron-dev\"",
    "electron-dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 wait-on http://localhost:5173 && electron . ",
    "build": "vite build && npm run copy-main",
    "copy-main": "node scripts/copy-main.js",
    "dist": "npm run build && electron-builder",
    "db-wait-start": "wait-on tcp:3306 && npm run server",
    "server": "npm run start --prefix smokess",
    "start": "node server.js"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "os": "^0.1.2",
    "pdf-to-printer": "^5.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.5"
  }
}
